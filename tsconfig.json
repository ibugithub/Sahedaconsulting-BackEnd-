{
  "compilerOptions": {
    "target": "es2016",                          // Set the ECMAScript target version
    "module": "commonjs",                        // Specify the module code generation method
    "rootDir": "./",                              // Root directory of input files
    "outDir": "./dist",                          // Directory to output the compiled JavaScript files
    "sourceMap": true,                           // Generate corresponding .map files for debugging
    "esModuleInterop": true,                     // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,    // Enforce consistent casing in imports
    "strict": true,                              // Enable all strict type-checking options
    "skipLibCheck": true                         // Skip type checking of declaration files for faster compilation
  },
  "include": ["src/**/*"],                       // Include all TypeScript files in the src folder and subfolders
  "exclude": ["node_modules", "dist"]            // Exclude node_modules and the output folder from compilation
}
